#!/bin/sh

filter() { grep -e "\[paused\]" -e "\[playing\]" | sed '/^volume:/d;s/\\&/&amp;/g;s/  */ /g;s/.*playing.*#/ \[‚ñ∂Ô∏è /;s/ (.*/\]/;s/.*paused.*#/ \[‚è∏ /;/^ERROR/Q' | paste -sd ' ' -;}

pidof -x sb-mpdup >/dev/null 2>&1 || sb-mpdup >/dev/null 2>&1 &

case $BLOCK_BUTTON in
	1) mpc status | filter ; setsid -f "$TERMINAL" -e ncmpcpp ;;
	2) mpc toggle | filter ;;  # right click, pause/unpause
	3) mpc status | filter ; notify-send "üéµ Music module" "\- Shows mpd song playing.
- ‚è∏ when paused.
- Left click opens ncmpcpp.
- Middle click pauses.
- Scroll changes track.";;  # right click, pause/unpause
	4) mpc next   | filter ;;  # scroll up, next
	5) mpc prev   | filter ;;  # scroll down, previous
	6) mpc status | filter ; "$TERMINAL" -e "$EDITOR" "$0" ;;
	*) mpc status | filter ;;
esac
