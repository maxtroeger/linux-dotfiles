#!/bin/sh

commands="\
lock
quit dwm
suspend
reboot
shutdown"

choice="$(echo "$commands" | dmenu -p "Do which of the following?")" || exit 1

case $choice in
	"lock")		slock & xset dpms force off ;;
	"quit dwm")	pkill dwm ;;
	"suspend")	slock & xset dmps force off & zzz ;;
	"reboot")	sudo reboot ;;
	"shutdown") 	sudo shutdown -h now ;;
esac
