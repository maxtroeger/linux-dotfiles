#!/bin/sh

[ -d "$NQDIR" ] || mkdir -p "$NQDIR"
# $1 is a url; $2 is a command
[ -z "$1" ] && exit
cmd="$2"
[ -z "$cmd" ] && cmd="youtube-dl --add-metadata -ic -o $HOME/vids/%(title)s.%(ext)s"
idnum="$(nq -c $cmd $1)"
notify-send "$idnum: Queuing download..." "$1"
(nq -w "$idnum" && notify-send "$idnum: Download complete" "$1") &
